<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/images_hape1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/dsc_79961" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-160.0dip"
        android:background="@drawable/images_hape1"
        android:orientation="vertical">

        <Button
            android:id="@+id/resetPinResetPinButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45.0dip"
            android:layout_marginRight="45.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/button_shape1"
            android:text="Reset Pin"
            android:textAllCaps="false"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />

        <EditText
            android:id="@+id/resetPinMobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="25.0dip"
            android:selectAllOnFocus="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:gravity="center_horizontal"
            android:text="Reset Pin"
            android:textColor="#ff2d9cdb"
            android:textSize="26.0sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="25.0dip"
            android:layout_marginTop="40.0dip"
            android:text="Reg. Mobile No"
            android:textColor="#ff8b8b8b"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25.0dip"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resetPinSignUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:background="#ffffffff"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have An Account?"
            android:textSize="20.0sp" />
    </LinearLayout>
</LinearLayout>