<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/images_hape1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/dsc_79961" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-160.0dip"
        android:background="@drawable/images_hape1"
        android:orientation="vertical">

        <Button
            android:id="@+id/otpDoneButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45.0dip"
            android:layout_marginRight="45.0dip"
            android:layout_marginTop="35.0dip"
            android:background="@drawable/button_shape1"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="#ffffffff"
            android:textSize="24.0sp" />

        <EditText
            android:id="@+id/otpOtp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginRight="35.0dip"
            android:inputType="number"
            android:selectAllOnFocus="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25.0dip"
            android:gravity="center_horizontal"
            android:text="Verify Your Mobile ! "
            android:textColor="#ff8b8b8b"
            android:textSize="24.0sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="25.0dip"
            android:layout_marginTop="65.0dip"
            android:text="Enter OTP"
            android:textColor="#ff8b8b8b"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35.0dip"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/otpClickHereButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:background="#ffffffff"
            android:text="Click here"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:textSize="20.0sp" />
    </LinearLayout>
</LinearLayout>